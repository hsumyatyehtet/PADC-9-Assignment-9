<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_login"
              android:text="LOGIN"
              android:layout_marginTop="?attr/actionBarSize"
              android:textStyle="bold"
              android:textSize="24sp"
              android:layout_marginLeft="32dp"
              android:textColor="@color/colorAccent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Sign in your account to continue"
              android:layout_below="@+id/tv_login"
              android:id="@+id/tv_singn"
              android:textSize="12sp"
              android:textColor="@color/colorSecondaryText"
              android:layout_marginLeft="8dp"/>

    <ImageView android:layout_width="200dp" android:layout_height="200dp"
               android:src="@drawable/leaf"
               android:id="@+id/iv_leaf"
               android:layout_alignParentRight="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_above="@+id/rl_email"
              android:text="EMAIL ID"
              android:id="@+id/tv_email"
              android:layout_marginLeft="82dp"
              android:fontFamily="sans-serif-condensed-medium"
              android:textSize="14sp"
              android:textColor="@color/colorPrimaryText"
              android:layout_marginBottom="4dp"
              android:textStyle="bold"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@drawable/login_background"
                  android:id="@+id/rl_email"
                  android:layout_marginLeft="64dp"
                  android:orientation="vertical"
                  android:layout_below="@+id/iv_leaf"
                  android:layout_alignParentRight="true">

        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:hint="Name@gmail.com"
                  android:textColor="@color/colorSecondaryText"
                  android:background="@android:color/transparent"
                  android:id="@+id/et_email"
                  android:textSize="14sp"
                  android:singleLine="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="18dp"/>

    </RelativeLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="PASSWORD"
              android:layout_marginLeft="82dp"
              android:fontFamily="sans-serif-condensed-medium"
              android:textSize="14sp"
              android:textColor="@color/colorPrimaryText"
              android:id="@+id/tv_password"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="12dp"
              android:layout_below="@+id/rl_email"
              android:textStyle="bold"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@drawable/login_background"
                  android:id="@+id/rl_password"
                  android:layout_marginLeft="64dp"
                  android:orientation="vertical"
                  android:layout_below="@+id/tv_password"
                  android:layout_alignParentRight="true">

        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:hint=".........................."
                  android:textColor="@color/colorSecondaryText"
                  android:background="@android:color/transparent"
                  android:layout_centerVertical="true"
                  android:id="@+id/et_password"
                  android:textSize="18sp"
                  android:singleLine="true"
                  android:layout_marginLeft="18dp"/>

    </RelativeLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Forgot Password?"
              android:textSize="12sp"
              android:id="@+id/tv_forget_password"
              android:textColor="@color/colorAccent"
              android:layout_below="@+id/rl_password"
              android:layout_alignParentRight="true"
              android:layout_marginTop="12dp"
              android:layout_marginRight="16dp"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginRight="64dp"
            android:background="@drawable/btn_background"
            android:layout_below="@+id/tv_forget_password"
            android:layout_marginTop="120dp"
            android:text="LOGIN"
            android:id="@+id/btn_login"
            android:textColor="@color/colorText"/>

</RelativeLayout>