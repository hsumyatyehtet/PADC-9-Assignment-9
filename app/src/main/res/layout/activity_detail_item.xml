<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="150dp"
                                   app:cardCornerRadius="12dp"
                                   android:layout_marginRight="4dp"
                                   android:layout_marginLeft="4dp"
                                   android:layout_marginTop="4dp"
                                   app:cardElevation="2dp"
                                   android:layout_height="200dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@color/colorAccent">

        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:id="@+id/iv_detail_rv_item"
                   android:layout_marginTop="16dp"
                   android:layout_marginLeft="16dp"
                   android:background="@drawable/detail_rv_item_image_bg"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Temperature"
                  android:textColor="@color/colorText"
                  android:id="@+id/tv_detail_rv_title"
                  android:layout_above="@+id/tv_detail_rv_temperature"
                  android:layout_marginLeft="16dp"
                  android:textSize="14sp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="18-25 c"
                  android:textColor="@color/colorText"
                  android:layout_alignParentBottom="true"
                  android:id="@+id/tv_detail_rv_temperature"
                  android:textStyle="bold"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="10dp"
                  android:textSize="24sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>